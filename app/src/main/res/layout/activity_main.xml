<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caleb.assign1.MainActivity">


    <Button
        android:id="@+id/trueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NextBtn"
        android:layout_alignBottom="@+id/NextBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="truePress"
        android:text="True"
        tools:text="True" />

    <Button
        android:id="@+id/falseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NextBtn"
        android:layout_alignBottom="@+id/NextBtn"
        android:layout_centerHorizontal="true"
        android:onClick="falsePress"
        android:text="False"
        tools:text="False" />

    <Button
        android:id="@+id/NextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="52dp"
        android:onClick="nextPress"
        android:text="Next" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/numC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView4"
        tools:text="TextView" />

    <TextView
        android:id="@+id/numI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numC"
        android:layout_alignLeft="@+id/NextBtn"
        android:layout_alignStart="@+id/NextBtn"
        tools:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/trueBtn"
        android:layout_alignRight="@+id/trueBtn"
        android:layout_below="@+id/questionText"
        android:layout_marginTop="105dp"
        android:text="Correct" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numI"
        android:layout_alignStart="@+id/numI"
        android:layout_alignTop="@+id/textView3"
        android:text="Incorrect" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trueBtn"
        android:layout_marginBottom="22dp"
        android:layout_toEndOf="@+id/trueBtn"
        android:layout_toRightOf="@+id/trueBtn"
        android:text="Correct Answer:" />

    <TextView
        android:id="@+id/questionText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/falseBtn"
        android:layout_toRightOf="@+id/falseBtn"
        tools:text="Text" />

</RelativeLayout>